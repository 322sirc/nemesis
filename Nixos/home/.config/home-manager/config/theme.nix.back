{
  pkgs,
  config,
  ...
}: {

  home.pointerCursor = {
    package = pkgs.bibata-cursors;
    name = "Bibata-Original-Ice";
    size = 24;
    gtk.enable = true;
    x11.enable = true;
  }; 

  gtk = {
    enable = true;

    theme = {
      name = "Catppuccin-Frappe-Standard-Maroon-Dark";
      package = pkgs.catppuccin-gtk.override {
        accents = ["maroon"];
        size = "standard";
        variant = "frappe";
      };
    };
  };
}
